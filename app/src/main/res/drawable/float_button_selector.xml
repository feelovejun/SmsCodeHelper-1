<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient android:centerColor="#66BDBDBD"
                              android:endColor="#66E0E0E0"
                              android:gradientRadius="110"
                              android:type="radial"/>
                </shape>
            </item>
            <item android:bottom="2dp"
                  android:left="2dp"
                  android:right="2dp"
                  android:top="2dp" >
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimary"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient android:centerColor="#88BDBDBD"
                              android:endColor="#88E0E0E0"
                              android:gradientRadius="120"
                              android:type="radial"/>
                </shape>
            </item>
            <item android:bottom="3dp"
                  android:left="3dp"
                  android:right="3dp"
                  android:top="3dp" >
                <shape android:shape="oval">
                    <solid android:color="@color/colorPrimaryDark"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>